@model BangazonWorkforceManagement.Models.ViewModels.AssignEmployeeTrainingViewModel

@{
    ViewData["Title"] = "Assign";
}

<h1>Assign Training</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingProgramId" class="control-label"></label>
                <select asp-for="TrainingProgramId" asp-items="@Model.TrainingOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
